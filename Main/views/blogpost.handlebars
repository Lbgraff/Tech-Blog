<div class="text-center">
  <h2>Blog: {{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </p>

  {{#if logged_in}}
  <form 
  data-blogpost-id="{{id}}" class="form new-comment-form">
    <div class="form-group">
      <label for="comment-name">comment:</label>
      <input class="form-input" type="text" 
      id="comment-name" name="comment-name" />
      <button class="btn btn-primary" type="submit">submit</button>
    </div>
  </form>
  {{/if}}

  {{#each comments as |comment| }}
<div class="row mb-4 comment">
  <div class="col-md-7">
    <p>
      {{comment.comment_text}}
    </p>
  </div>
  <div class="col-md-5">
    <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
  </div>
</div>
{{/each}}
<script src="/js/comment.js"></script>
</div>